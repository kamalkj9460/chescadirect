{% if settings.franchesca_display_three_block_banner %}
<section class="banner-home-top">
  <ul class="row">
    <li class="col-xs-4 wow fadeInUp" data-wow-delay="100ms">
	<a href="{{ settings.franchesca_three_block_banner_link_1 }}" title="">
	{{ 'franchesca_top-banner-home-1.jpg' | asset_url | img_tag }}
	{% if settings.franchesca_display_banner_text_1 %}
	  <h4>
        <span style="
          {% if settings.franchesca_three_block_banner_size_1 != blank %}
              font-size: {{ settings.franchesca_three_block_banner_size_1] }}px;
          {% elsif settings.franchesca_three_block_banner_size != blank %}
              font-size: {{ settings.franchesca_three_block_banner_size] }}px;
          {% endif %}
          {% if settings.franchesca_three_block_banner_color_1 != blank %} 
              color: {{ settings.franchesca_three_block_banner_color_1 }};
          {% elsif settings.franchesca_three_block_banner_color != blank %}
              color: {{ settings.franchesca_three_block_banner_color }};
          {% endif %}"
        >	
			{% if settings.franchesca_three_block_banner_text_1 != blank %}
			{{ settings.franchesca_three_block_banner_text_1 }}
			{% endif %}
		</span>
      </h4>
	{% endif %}
	</a>
	</li>
    <li class="col-xs-4 wow fadeInUp" data-wow-delay="300ms">
		<a href="{{ settings.franchesca_three_block_banner_link_2 }}" title="">{{ 'franchesca_top-banner-home-2.jpg' | asset_url | img_tag }}
			{% if settings.franchesca_display_banner_text_2 %}
				<h4>
                  <span style="
          {% if settings.franchesca_three_block_banner_size_2 != blank %}
              font-size: {{ settings.franchesca_three_block_banner_size_2] }}px;
          {% elsif settings.franchesca_three_block_banner_size != blank %}
              font-size: {{ settings.franchesca_three_block_banner_size] }}px;
          {% endif %}
          {% if settings.franchesca_three_block_banner_color_2 != blank %} 
              color: {{ settings.franchesca_three_block_banner_color_2 }};
          {% elsif settings.franchesca_three_block_banner_color != blank %}
              color: {{ settings.franchesca_three_block_banner_color }};
          {% endif %}"
        >
				{% if settings.franchesca_three_block_banner_text_2 != blank %}
				{{ settings.franchesca_three_block_banner_text_2 }}
				{% endif %}
				</span></h4>
			{% endif %}
		</a>
	</li>
    <li class="col-xs-4 wow fadeInUp" data-wow-delay="500ms">
	<a href="{{ settings.franchesca_three_block_banner_link_3 }}" title="">{{ 'franchesca_top-banner-home-3.jpg' | asset_url | img_tag }}
	{% if settings.franchesca_display_banner_text_3 %}
	<h4>
                  <span style="
          {% if settings.franchesca_three_block_banner_size_3 != blank %}
              font-size: {{ settings.franchesca_three_block_banner_size_3] }}px;
          {% elsif settings.franchesca_three_block_banner_size != blank %}
              font-size: {{ settings.franchesca_three_block_banner_size] }}px;
          {% endif %}
          {% if settings.franchesca_three_block_banner_color_3 != blank %} 
              color: {{ settings.franchesca_three_block_banner_color_3 }};
          {% elsif settings.franchesca_three_block_banner_color != blank %}
              color: {{ settings.franchesca_three_block_banner_color }};
          {% endif %}"
        >
	{% if settings.franchesca_three_block_banner_text_3 != blank %}
	{{ settings.franchesca_three_block_banner_text_3 }}
	{% endif %}
	</span></h4>
	{% endif %}
	</a>
	</li>
  </ul>
</section>
{% endif %}