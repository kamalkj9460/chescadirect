{% comment %}

  This page template is a requirement if you are submitting your theme to the Shopify Theme Store.
  Be sure to select page.contact as the template from the admin page to have this template take effect.

  For information on adding more fields, visit:
    - http://docs.shopify.com/support/configuration/store-customization/adding-fields-to-the-liquid-contact-form

{% endcomment %}
{% layout 'theme-franchesca' %}
<div class="contactus-page">

    <header class="page-header">
      <h1>{{ page.title }}</h1>
    </header>

    {% comment %}
      Regular page content goes here.
    {% endcomment %}
    <div class="rte">
      {{ page.content }}
    </div>
  
   {% comment %}
      Google Map
    {% endcomment %}
  {% if settings.display_google_map %}
    <div class="map">
      {% if settings.google_map_code != blank %}
      {{ settings.google_map_code }}
      {% endif %}
	  </div>
  
  {% endif %}

    {% comment %}
      Contact form starts here
    {% endcomment %}
    <div>
      {% form 'contact' %}

        {% comment %}
          Successful message
        {% endcomment %}
        {% if form.posted_successfully? %}
          <p class="note form-success">
            Thanks for asking for a brochure. We'll pop one in the post shortly!
          </p>
        {% endif %}

        {% include 'form-errors-custom' %}
      	
      <div class="row">
        
        <div class="col-xs-6">
          <div id="contactFormWrapper">
            
            <h2>Request A Brochure</h2>
            <label for="contactFormName">Your Name</label>
            <input type="text" id="contactFormName" name="contact[name]" placeholder="Your Name" autocapitalize="words">
                     
  
            <label for="contactFormEmail">Email<em>*</em></label>
            <input type="email" name="contact[email]" placeholder="you@email.com" id="contactFormEmail" autocorrect="off" autocapitalize="off">
  
          
            <label for="contactFormMessage">Your Address <em>*</em></label>
            <textarea rows="10" name="contact[body]" placeholder="Your Address" id="contactFormMessage"></textarea>
  
            <input type="submit" class="btn left" value="Submit Contact">
           
          </div>
        </div>
        {% if settings.display_location %}
        
        
        <div class="col-xs-6">
          	<div class="location">
              <h4>Please let us know if you want a brochure - we'll get one off to you shortly</p><p> You can write to us here:</p><p>2 Tufnell Park Road<br> London,<br> N7 0DP <br>United Kingdom</p><p>Tel: 0207 609 3434 -  Monday-Friday 9am-5pm</p>
          </div>
        </div>
        {% endif %}
       
      </div>
        

      {% endform %}

  </div>

</div>
{% include 'breadcrumb' %}